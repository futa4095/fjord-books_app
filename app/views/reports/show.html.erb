<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:body) %>:</strong>
  <%= @report.body %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:created_at) %>:</strong>
  <%= @report.created_at.strftime(t('date.formats.default')) %>
</p>

<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= @report.user.name %>
</p>

<% @report.comments.includes(:user).each.with_index(1) do |comment, i| %>
  <p>
    <strong><%= Comment.model_name.human %><%= "##{i}" %>:</strong>
    <%= simple_format comment.body %><br>
    <%= User.human_attribute_name(:name) %>
    <%= comment.user.name.presence || comment.user.email %><br>
    <%= Comment.human_attribute_name(:created_at) %>
    <%= comment.created_at.strftime(t('date.formats.default')) %>
  </p>
<% end %>

<%= form_with(model: @report.comments.new, url: polymorphic_path([@report, Comment.new])) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<% if @report.user == current_user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('views.common.back'), reports_path %>
