<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <% if current_user && current_user.avatar.attached? %>
    <%= image_tag current_user.avatar.variant(resize: "100x100") %>
  <% end %>
</div>
