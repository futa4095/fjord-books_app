<h1><%= User.model_name.human %></h1>
<%= paginate @users %>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:id) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= link_to t('views.common.show'), url_for(controller: :users, action: :show, id: user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>